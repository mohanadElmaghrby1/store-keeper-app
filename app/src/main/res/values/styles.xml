<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your themef525eb here. -->
        <item name="colorPrimary">#10b79e</item>
        <item name="colorButtonNormal">#10b79e</item>
    </style>

    <style name="ButtonStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

    <style name="TextScoreStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">0</item>
        <item name="android:textSize">@dimen/score_text_size</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>
